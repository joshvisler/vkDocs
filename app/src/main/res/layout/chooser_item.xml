<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:paddingBottom="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:id="@+id/chooser_folder_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="#e9ecf1" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/doc_text_image"
            android:layout_alignTop="@+id/chooser_folder_icon"
            android:layout_alignLeft="@+id/chooser_folder_icon"
            android:layout_alignStart="@+id/chooser_folder_icon"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="sdcard1"
            android:id="@+id/choser_item_title"
            android:layout_alignBaseline="@+id/doc_text_image"
            android:layout_alignBottom="@+id/doc_text_image"
            android:layout_toRightOf="@+id/chooser_folder_icon"
            android:layout_toEndOf="@+id/chooser_folder_icon"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="#303030" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pdf"
            android:id="@+id/chooser_file_ext"
            android:layout_alignLeft="@+id/chooser_folder_icon"
            android:layout_alignStart="@+id/chooser_folder_icon"
            android:layout_alignRight="@+id/chooser_folder_icon"
            android:layout_alignEnd="@+id/chooser_folder_icon"
            android:gravity="center"
            android:layout_alignBottom="@+id/chooser_folder_icon"
            android:layout_alignTop="@+id/chooser_folder_icon" />

    </RelativeLayout>


</RelativeLayout>