<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/vk_color"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Редактирование файла"
        android:id="@+id/change_dialog_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/vk_color"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="4dp"
        android:layout_weight="0.16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Название"
        android:id="@+id/change_labale_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="12dp"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/change_doc_title"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="#ffffff"
        android:textColorHint="#6de8e8e8"
        android:textSize="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Метки"
        android:id="@+id/change_labale_point"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/change_doc_point"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif"
        android:textColorHint="#c8e4e4e4"
        android:hint="Введите метку"
        android:textSize="14dp" />
</LinearLayout>