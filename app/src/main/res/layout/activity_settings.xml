<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.vkdocs.oceanminded.vkdocs.Activitys.SettingsActivity">
<include layout="@layout/toolbar_settings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/include" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/user_avatar"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/user_name"
        android:layout_alignBottom="@+id/user_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:id="@+id/exit_user"
        android:layout_below="@+id/user_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp"
        android:textColor="#ffffff"
        android:background="@color/vk_color"
        android:layout_marginTop="8dp" />

</RelativeLayout>
